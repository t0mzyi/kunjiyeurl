<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cheriya Link - URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        /* --- General Centering and Aesthetics (Applies to both modes) --- */
        body {
            min-height: 100vh;
            background-color: #f8f9fa; /* Default light background */
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s; /* Smooth transition for dark mode switch */
        }

        .main-card {
            max-width: 550px;
            width: 90%;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s, box-shadow 0.3s;
        }

        .btn-primary {
            /* Fresh Cyan Color */
            background-color: #00bcd4;
            border-color: #00bcd4;
        }

        .btn-primary:hover {
            background-color: #0097a7;
            border-color: #0097a7;
        }

        .form-control:focus {
            border-color: #00bcd4;
            box-shadow: 0 0 0 0.25rem rgba(0, 188, 212, 0.25);
        }

        .result-box {
            background-color: #e6f7ed; /* Light success color */
            border: 1px solid #c3e6cb;
            padding: 1rem;
            border-radius: 0.25rem;
            margin-top: 1.5rem;
            transition: background-color 0.3s, border-color 0.3s;
        }

        .result-link {
            font-size: 1.15rem;
            font-weight: 500;
            color: #155724; /* Dark success text color */
            word-break: break-all;
        }

        /* --- DARK MODE STYLES --- */
        body.dark-mode {
            background-color: #212529; /* Dark background */
            color: #f8f9fa; /* Light text */
        }

        .dark-mode .main-card {
            background-color: #343a40; /* Dark card background */
            color: #f8f9fa;
            box-shadow: 0 0.5rem 1rem rgba(255, 255, 255, 0.1);
        }
        
        /* Ensure the input field still looks good in dark mode */
        .dark-mode .form-control {
            background-color: #495057;
            border-color: #6c757d;
            color: #f8f9fa;
        }
        
        .dark-mode .form-control::placeholder {
            color: #adb5bd;
        }
        
        .dark-mode .text-muted {
            color: #adb5bd !important;
        }
        
        /* Adjust result box for dark mode */
        .dark-mode .result-box {
            background-color: #1a351f; /* Darker success background */
            border-color: #2f5939;
        }

        .dark-mode .result-link {
             color: #90ee90; /* Lighter success text */
        }
    </style>
</head>
<body>

    <div class="main-card card p-4 position-relative">
        <button id="darkModeToggle" class="btn btn-sm btn-outline-secondary position-absolute top-0 end-0 m-3" title="Toggle Dark Mode">
            <span id="toggleIcon">ðŸŒ™</span>
        </button>
        
        <div class="card-body pt-3">
            <h1 class="card-title text-center mb-4 text-primary fw-bold">
                <span class="fs-4 me-2">ðŸ”—</span> Cheriya Link
            </h1>
            <p class="card-subtitle mb-4 text-muted text-center">
                Paste your long URL below to get a shorter, cleaner link.
            </p>
            
            <form action="/shorten" method="post" class="d-flex gap-2">
                <input 
                    type="text" 
                    name="longUrl" 
                    class="form-control form-control-lg" 
                    placeholder="e.g., https://very.long.website.com/path/to/content" 
                    required
                >
                <button type="submit" class="btn btn-primary btn-lg flex-shrink-0">
                    Shorten
                </button>
            </form>

            <% if (typeof shortUrl !== 'undefined') { %>
                <div class="result-box text-center">
                    <p class="mb-2 fw-semibold text-success">
                        âœ… Your short link is ready!
                    </p>
                    <a href="<%= shortUrl %>" class="result-link">
                        <%= shortUrl %>
                    </a>
                </div>
            <% } %>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        const toggleButton = document.getElementById('darkModeToggle');
        const body = document.body;
        const icon = document.getElementById('toggleIcon');
        const mainCard = document.querySelector('.main-card');
        
        // Function to set the mode
        function setMode(isDark) {
            if (isDark) {
                body.classList.add('dark-mode');
                icon.textContent = 'â˜€ï¸'; // Sun icon for light mode
                localStorage.setItem('theme', 'dark');
            } else {
                body.classList.remove('dark-mode');
                icon.textContent = 'ðŸŒ™'; // Moon icon for dark mode
                localStorage.setItem('theme', 'light');
            }
        }

        // 1. Check for saved preference on load
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            setMode(true);
        } else {
             // Default to light mode (or system preference check could go here)
             setMode(false);
        }


        // 2. Add event listener for the button click
        toggleButton.addEventListener('click', () => {
            // Toggle the dark-mode class on the body
            const isCurrentlyDark = body.classList.contains('dark-mode');
            setMode(!isCurrentlyDark);
        });
    </script>
</body>
</html>